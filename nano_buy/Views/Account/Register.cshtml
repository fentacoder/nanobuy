@model NanoShop.Web.VM.Account.RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-sm-12">
        <p class="text-center"><b>@ViewBag.Message</b></p>
    </div>
</div>
<div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
        <h3 class="text-center">Register</h3>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>User Name</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @maxlength = 100 })
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @maxlength = 100 })
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @maxlength = 100 })
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @type = "password", @class = "form-control", @maxlength = 100 })
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary nano-theme" value="Register" />
                    <a href="/Account/Login">Cancel</a>
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>

